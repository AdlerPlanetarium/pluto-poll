.results
  height 100vh
  display flex
  flex-direction row
  justify-content space-between
  align-items flex-end
  padding 100px 200px 100px 150px

.bar
  width 15%
  height 100%
  position relative
  display flex
  flex-direction row
  align-items flex-end

.name
  font-size 3.5em
  position relative
  right -60px
  transform-origin left bottom 0
  white-space nowrap
  transform rotate(-90deg)

.percentage
  font-size 3em
  color black
  text-align center

.result-container
  position absolute
  height 100%
  bottom: 0
  right 0
  text-align left
  background-color rgba(28, 132, 142, 0.50)
  width 70%
  border-radius 10px
  box-shadow inset -10px 10px 20px 0px #15636b
  border-left: thin solid white;

.result-bar
  position absolute
  bottom 0
  background-color #FBD508
  width 100%
  vertical-align top
  border-radius 10px
  // border-bottom-left-radius 10px
  // border-bottom-right-radius 10px
  box-shadow inset -10px 0px 20px 0px #d5b625
