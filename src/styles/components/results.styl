.results
  height 100vh
  display flex
  flex-direction row
  align-items flex-end
  padding 60px 60px

.bar
  width 25%
  font-size 2em
  .name
    position absolute
    bottom 500px
    white-space nowrap
    /* Safari */
    -webkit-transform rotate(-90deg)
    /* Firefox */
    -moz-transform rotate(-90deg)
    /* IE */
    -ms-transform rotate(-90deg)
    /* Opera */
    -o-transform rotate(-90deg)
  .percentage
    color black
